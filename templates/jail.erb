# Fail2ban jail <%= @name %> created by puppet
<% if ! @comment.empty? -%>
# <%= @comment %>
<% end -%>

[<%= @name %>]
enabled = <%= @enabled %>
<% if @port -%>
port = <%= @port %>
<% end -%>
<% if @filter -%>
filter  = <%= @filter %>
<% end -%>
<% if ! @log_path_array.empty? -%>
logpath = <%= @log_path_array.join("\n          ") %>
<% end -%>
<% if @protocol -%>
protocol = <%= @protocol %>
<% end -%>
<% if @maxretry -%>
maxretry = <%= @maxretry %>
<% end -%>
<% if @findtime -%>
findtime = <%= @findtime %>
<% end -%>
<% if @action -%>
action = <%= @action %>
<% end -%>
<% if @banaction -%>
banaction = <%= @banaction %>
<% end -%>
<% if @bantime -%>
bantime = <%= @bantime %>
<% end -%>
<% if not @ignoreip.empty? -%>
ignoreip = <%= @ignoreip.join(' ') %>
<% end -%>
<% if @backend -%>
backend = <%= @backend %>
<% end -%>

